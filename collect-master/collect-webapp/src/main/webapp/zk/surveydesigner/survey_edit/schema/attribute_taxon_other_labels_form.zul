<zk>
	<?component name="fieldErrorHandler" class="org.openforis.collect.designer.component.FieldErrorHandler"?>

	 <groupbox width="100%" closable="false">
	  	<caption label="${labels.survey.schema.attribute.custom_field_labels}" />
		<grid class="inner">
			<columns>
				<column width="150px" />
				<column width="100%" />
			</columns>
			<rows>
				<row>
					<fieldErrorHandler
						message="@load(vmsgs['codeFieldLabel'])">
						<label
							use="org.openforis.collect.designer.component.FieldLabel"
							value="${labels.survey.schema.attribute.taxon.field_label.code}"
							languageCode="@load(vm.currentLanguageCode)" />
					</fieldErrorHandler>
					<fieldErrorHandler
						message="@load(vmsgs['codeFieldLabel'])">
						<textbox width="250px"
							value="@bind(fx.codeFieldLabel)" onChange="@command('applyChanges')" />
					</fieldErrorHandler>
				</row>
				<row>
					<fieldErrorHandler
						message="@load(vmsgs['scientificNameFieldLabel'])">
						<label
							use="org.openforis.collect.designer.component.FieldLabel"
							value="${labels.survey.schema.attribute.taxon.field_label.scientific_name}"
							languageCode="@load(vm.currentLanguageCode)" />
